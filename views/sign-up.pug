extends layout

block content
  if currentUser
    p You are already logged in
  else
    div.container
      form.signup-form(action='' method='POST')
        label.form-control(for='first-name')
          p First Name
          input(type='text' id='first-name' name='firstName' value=(previous ? previous.firstName : ''))
          if errors
            - const error = errors.find(el => el.param === 'firstName')
            if error
              p.error-message= error.msg
        label.form-control(for='last-name')
          p Last Name
          input(type='text' id='last-name' name='lastName' value=(previous ? previous.lastName : ''))
          if errors
            - const error = errors.find(el => el.param === 'lastName')
            if error
              p.error-message= error.msg
        label.form-control(for='email')
          p Email Address
          input(type='email' id='email' name='email' value=(previous ? previous.email : ''))
          if errors
            - const error = errors.find(el => el.param === 'email')
            if error
              p.error-message= error.msg
        label.form-control(for='password')
          p Password
          input(type='password' id='password' name='password' value=(previous ? previous.password : ''))
          if errors
            - const error = errors.find(el => el.param === 'password')
            if error
              p.error-message= error.msg
        label.form-control(for='password-confim')
          p Confirm Password
          input(type='password' id='password-confirm' name='passwordConfirm' value=(previous ? previous.passwordConfirm : ''))
          if errors
            - const error = errors.find(el => el.param === 'passwordConfirm')
            if error
              p.error-message= error.msg
        div.button-container
          button(type='submit') Sign up

